<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:stretchColumns="*">
<!--    android:layout_constraintLeft_toLeftOf="parent"-->
<!--    android:layout_constraintRight_toRightOf="parent"-->
<!--    android:layout_constraintTop_toTopOf="parent"-->

    <TableRow
        android:weightSum="3">

        <ImageView
            android:id="@+id/player1"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/btn_star_big_on"></ImageView>

        <TextView
            android:id="@+id/text2"
            android:layout_height="220dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="02"
            android:textSize="50sp"></TextView>

        <ImageView
            android:id="@+id/player2"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_launcher_background"></ImageView>

    </TableRow>
</TableLayout>


